						<span class="title">Veri Analizi</span>
						<span class="category">Veri Analizi</span>
					</div> <!-- end .meta -->
				</a> <!-- end .overlay -->
			</div> <!-- end .item -->
			<div class="item web">
				<img src="/picture/web_Dev.jpg" alt="alt text" class="img-responsive">
				<a href="single-portfolio.html" class="overlay">
					<div class="background"></div>
