@model List<Experience>

<section id="section4" style="padding: 120px 0; background: #0f172a; position: relative; overflow: hidden; font-family: 'Inter', 'Segoe UI', sans-serif;">

    <div style="position: absolute; inset: 0; background: radial-gradient(circle at 70% 10%, rgba(59, 130, 246, 0.08) 0%, transparent 40%), radial-gradient(circle at 30% 90%, rgba(168, 85, 247, 0.08) 0%, transparent 40%);"></div>
    <div style="position: absolute; inset: 0; background-image: linear-gradient(rgba(255,255,255,0.02) 1px, transparent 1px), linear-gradient(90deg, rgba(255,255,255,0.02) 1px, transparent 1px); background-size: 40px 40px;"></div>

    <div class="container" style="position: relative; z-index: 2;">

        <div style="margin-bottom: 80px;">
            <h2 style="font-size: 48px; font-weight: 800; color: #ffffff; display: flex; align-items: center; gap: 25px; letter-spacing: -1.5px; margin: 0;">
                <span style="width: 50px; height: 6px; background: linear-gradient(90deg, #3b82f6, #a855f7); display: inline-block; border-radius: 20px;"></span>
                Kariyer Yolculuğu
            </h2>
            <p style="color: #94a3b8; margin-top: 15px; font-size: 16px; letter-spacing: 1px; text-transform: uppercase; font-weight: 500; padding-left: 75px;">Profesyonel Deneyim ve Geçmiş</p>
        </div>

        <div style="position: relative; padding-left: 60px;">

            <div style="position: absolute; left: 24px; top: 10px; bottom: 10px; width: 2px; background: linear-gradient(to bottom, #3b82f6, #a855f7, transparent); opacity: 0.6;"></div>

            @foreach (var item in Model)
            {
                <div class="experience-item" style="position: relative; margin-bottom: 70px;">

                    <div style="position: absolute; left: -44px; top: 5px; width: 18px; height: 18px; background: #0f172a; border: 3px solid #3b82f6; border-radius: 50%; box-shadow: 0 0 20px rgba(59, 130, 246, 0.6); z-index: 3;"></div>

                    <div class="experience-card" style="
                            background: linear-gradient(135deg, rgba(255, 255, 255, 0.03), rgba(255, 255, 255, 0.01));
                            border: 1px solid rgba(255, 255, 255, 0.08);
                            box-shadow: 0 4px 24px -1px rgba(0, 0, 0, 0.2);
                            border-radius: 24px;
                            padding: 35px;
                            display: flex;
                            gap: 30px;
                            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
                            cursor: default;
                            position: relative;
                            overflow: hidden;
                        "
                         onmouseover="this.style.transform='translateY(-8px)'; this.style.borderColor='rgba(59, 130, 246, 0.4)'; this.style.background='linear-gradient(135deg, rgba(59, 130, 246, 0.05), rgba(168, 85, 247, 0.05))'; this.style.boxShadow='0 20px 40px -10px rgba(0,0,0,0.4)';"
                         onmouseout="this.style.transform='translateY(0)'; this.style.borderColor='rgba(255,255,255,0.08)'; this.style.background='linear-gradient(135deg, rgba(255, 255, 255, 0.03), rgba(255, 255, 255, 0.01))'; this.style.boxShadow='0 4px 24px -1px rgba(0, 0, 0, 0.2)';">

                        <div style="position: absolute; top: 0; left: 0; right: 0; height: 1px; background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);"></div>

                        <div style="flex-shrink: 0;">
                            <div style="width: 70px; height: 70px; background: rgba(15, 23, 42, 0.5); border-radius: 20px; display: flex; align-items: center; justify-content: center; border: 1px solid rgba(255, 255, 255, 0.05); box-shadow: inset 0 0 15px rgba(0,0,0,0.2);">
                                <i class="@item.IconUrl" style="font-size: 28px; background: linear-gradient(135deg, #3b82f6, #a855f7); -webkit-background-clip: text; -webkit-text-fill-color: transparent;"></i>
                            </div>
                        </div>

                        <div style="flex: 1;">
                            <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 15px; flex-wrap: wrap; gap: 10px;">
                                <div>
                                    <h4 style="color: #ffffff; font-size: 22px; font-weight: 700; margin: 0; letter-spacing: -0.5px;">@item.Title</h4>
                                    <span style="color: #3b82f6; font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px; margin-top: 5px; display: block;">@item.CompanyName</span>
                                </div>
                                <div style="background: rgba(255, 255, 255, 0.03); padding: 8px 18px; border-radius: 100px; border: 1px solid rgba(255, 255, 255, 0.08); color: #e2e8f0; font-size: 13px; font-weight: 600; letter-spacing: 0.5px;">
                                    @item.WorkDate
                                </div>
                            </div>
                            <p style="color: #94a3b8; line-height: 1.8; font-size: 15px; margin: 0; max-width: 850px;">
                                @item.Description
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<style>
    .owl-carousel, .testimonial-slider, .owl-nav, .owl-dots {
        display: none !important;
    }
</style>