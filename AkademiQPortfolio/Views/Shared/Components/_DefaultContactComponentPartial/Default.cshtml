@model  Contact
<section id="section8" style="padding: 100px 0; background: #0f172a; font-family: 'Inter', sans-serif; color: #ffffff;">
    <div class="container">

        <div style="margin-bottom: 60px;">
            <h2 style="font-size: 42px; font-weight: 800; letter-spacing: -1.5px; margin: 0;">ILETISIME GECIN</h2>
            <div style="width: 60px; height: 4px; background: linear-gradient(90deg, #3b82f6, #a855f7); margin-top: 15px; border-radius: 2px;"></div>
        </div>

        <div class="row">
            <div class="col-sm-5">
                <h5 style="text-transform: uppercase; letter-spacing: 1px; margin-bottom: 30px; color: #3b82f6;">Adres & Bilgiler</h5>

                <ul class="list-unstyled" style="line-height: 2.5; color: #94a3b8;">
                    <li><i class="ion-ios-location-outline" style="color: #3b82f6; margin-right: 10px;"></i> Türkiye / Ankara</li>
                    <li><i class="ion-iphone" style="color: #3b82f6; margin-right: 10px;"></i> +90 530 300 00 00</li>
                    <li><i class="ion-ios-email-outline" style="color: #3b82f6; margin-right: 10px;"></i> <a href="mailto:baris@example.com" style="color: #94a3b8;">baris@example.com</a></li>
                    <li><i class="ion-ios-home-outline" style="color: #3b82f6; margin-right: 10px;"></i> <a href="" style="color: #94a3b8;">www.barisbingol.com</a></li>
                </ul>

                <div style="margin-top: 40px; display: flex; gap: 15px;">
                    <a href="#" style="color: #94a3b8; font-size: 20px;"><i class="fa fa-linkedin"></i></a>
                    <a href="#" style="color: #94a3b8; font-size: 20px;"><i class="fa fa-github"></i></a>
                    <a href="#" style="color: #94a3b8; font-size: 20px;"><i class="fa fa-twitter"></i></a>
                </div>
            </div>

            <div class="col-sm-7">
                <h5 style="text-transform: uppercase; letter-spacing: 1px; margin-bottom: 30px; color: #a855f7;">İletişim Formu</h5>

                <form asp-action="SendMessage" asp-controller="Contact" method="post" class="contact-form">
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <input type="text" name="SenderName" placeholder="İsim" class="form-control custom-input" required>
                        </div>
                        <div class="col-sm-6 form-group">
                            <input type="email" name="SenderEmail" placeholder="Email" class="form-control custom-input" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6 form-group">
                            <select name="MessageSubject" class="form-control custom-input" required>
                                <option value="" disabled selected>Konu Seçiniz</option>
                                <option value="Proje Teklifi">Proje Teklifi</option>
                                <option value="API Geliştirme">API Geliştirme</option>
                                <option value="Danışmanlık">Danışmanlık</option>
                                <option value="Uygulama Geliştirme">Uygulama Geliştirme</option>
                            </select>
                        </div>
                        <div class="col-sm-6 form-group">
                            <input type="text" placeholder="Telefon (Opsiyonel)" class="form-control custom-input">
                        </div>
                    </div>

                    <div class="form-group">
                        <textarea name="MessageText" placeholder="Mesajınız" rows="4" class="form-control custom-input" required></textarea>
                    </div>

                    <div class="form-group" style="margin-top: 20px;">
                        <button type="submit" style="background: linear-gradient(90deg, #3b82f6, #a855f7); border: none; padding: 12px 30px; border-radius: 8px; color: #fff; font-weight: 700; transition: 0.3s; width: 200px;">
                            Mesajı Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<style>

    .custom-input {
        background: rgba(255, 255, 255, 0.03) !important;
        border: 1px solid rgba(255, 255, 255, 0.1) !important;
        color: #fff !important;
        border-radius: 8px !important;
        padding: 12px 15px !important;
        height: auto !important;
        transition: 0.3s !important;
    }

        .custom-input:focus {
            border-color: #3b82f6 !important;
            background: rgba(255, 255, 255, 0.05) !important;
            box-shadow: none !important;
        }


    select.custom-input option {
        background: #0f172a;
        color: #fff;
    }
</style>